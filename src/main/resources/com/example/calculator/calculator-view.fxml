<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.calculator.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER" prefWidth="200.0" spacing="35.0">
         <children>
            <Spinner fx:id="numberA" />
            <Spinner fx:id="numberB" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefWidth="200.0" spacing="18.0">
         <children>
            <Button fx:id="plusButton" mnemonicParsing="false" onAction="#plusButtonClick" text="+" />
            <Button fx:id="minusButton" mnemonicParsing="false" onAction="#minusButtonClick" text="-" />
            <Button fx:id="timesButton" mnemonicParsing="false" onAction="#timesButtonClick" text="*" />
            <Button fx:id="divideButton" mnemonicParsing="false" onAction="#divideButtonClick" text="/" />
            <Button fx:id="moduloButton" mnemonicParsing="false" onAction="#moduloButtonClick" text="\%" />
         </children>
      </HBox>
      <Text fx:id="result" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
   </children>
</VBox>
